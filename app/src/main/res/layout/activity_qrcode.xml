<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F7F7F7"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <include layout="@layout/view_title"/>

    <TextView
        android:id="@+id/tx_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46px"
        android:gravity="center_horizontal"
        android:text="路人甲的店铺"
        android:textColor="#000"
        android:textSize="42px"
        />

    <TextView
        android:id="@+id/tx_my_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal"
        android:text="我的活动 >"
        android:textColor="#F68847"
        android:textSize="36px"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@mipmap/app_withdraw_bg"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/im_qrcode"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@mipmap/home_banner01"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="扫码付款"
            android:textColor="#fff"
            android:textSize="42px"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54px"
        android:text="保存到手机"
        />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginTop="58px"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_withdraw_wechat"
            />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="#000"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_withdraw_ali02"
            android:id="@+id/imageView"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28px"
        android:gravity="center_horizontal"
        android:text="仅支持以上APP扫码识别、扫码付款"
        android:textColor="#B2B2B2"
        android:textSize="36px"
        />

</com.zhy.autolayout.AutoLinearLayout>